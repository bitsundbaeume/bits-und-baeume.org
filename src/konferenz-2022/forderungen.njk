<section class="max-w-3xl">
	<h2 id="preamble">{{ content.forderungen2022.preamble.name }}</h2>
	<div class="demands-fulltext">
		<p>{{ content.forderungen2022.preamble.content | safe }}</p>
	</div>
</section>


<section class="max-w-3xl">
	<h2>Forderungen 2022 (Kurze Version)</h2>

	{% for item in content.forderungen2022.items %}
	<div class="demands-fulltext">
		<h3><a href="#demand-{{ item.numeric_label }}">{{ item.numeric_label }} {{ item.name }}</a></h3>
		<p>{{ item.summary | safe }}</p>
		{% for subdemand in item.subdemands %}
			<p><b>{{ subdemand.numeric_label}} {{ subdemand.short_version | safe }}</b></p>
		{% endfor %}
	</div>
	{% endfor %}
</section>

<section class="max-w-3xl">
	<h2>Forderungen 2022 (Langversion)</h2>

	{% for item in content.forderungen2022.items %}
	<div class="demands-fulltext">
		<h3 id="demand-{{ item.numeric_label }}">{{ item.numeric_label }} {{ item.name }}</h3>
		<p>{{ item.summary | safe }}</p>
		{% for subdemand in item.subdemands %}
			<p><b>{{ subdemand.numeric_label}} {{ subdemand.short_version | safe }}</b></p>
			{% for subsubdemand in subdemand.subsubdemands %}
				<p>{{ subdemand.numeric_label}}{{loop.index}}. {{ subsubdemand | safe }}</p>
			{% endfor %}
		{% endfor %}
	</div>
	{% endfor %}
</section>
