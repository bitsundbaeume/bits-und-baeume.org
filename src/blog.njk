<section class="max-w-6xl">

	<h2 class="h3">Bits & Bäume Blog!</h2>
	
	<div flex-wrap>
	{% for post in collections.blogpost %}

		{% if post.data.aktuell !== "false" and post.data.aktuell !== "no" and post.data.aktuell !== "nein" %}

			{% if post.data.bild %}
				<div class="box box-img flex flex-wrap md:flex-nowrap gap-x-5">
					<div class="box__image w-full md:w-2/5">
						<img class="object-cover"
						src="{% thumbnail post.data.bild %}"
						alt="{{ post.data.bildunterschrift }}"
						sizes="(min-width: 780px) 280px, 93.04vw"
						data-img2picture-widths="280,400,670,800"
						>
					</div>
					<div class="text w-full md:w-3/5">
						<h2 class="h3">{{ post.data.title }}</h2>
						<p>
							{{ post.data.meta-description | safe }}
						</p>
						{% if post.data.buttonurl %}
							<p>
								<a href="{{ post.data.buttonurl }}">
									<button class="btn-dark">
										{% if post.data.buttontitle %}
											{{ post.data.buttontitle }}
										{% else %}
											weiterlesen
										{% endif %}
									</button>
								</a>
							</p>
						{% endif %}
						{% if post.data.datum and post.data.author %}
							<p>
								<i>{{ post.data.datum }}</i>  ({{ post.data.author }})</p>
						{% elif post.data.datum %}
							<p>only date <i>{{ post.data.datum }}</i>
								{{ post.data.author }}</p>
						{% elif post.data.author %}
							<p>({{ post.data.author }})</p>
						{% endif %}
					</div>
					<div class="box__pixel">
						<img src="/assets/images/pixel-box-img.svg" widht="50" height="40">
					</div>
				</div>
			{% else %}
				<div class="box box-infos">
					<h2 class="h3">{{ post.data.title }}</h2>
					<p>
							{{ post.data.meta_description }}
					</p>
					<p>
							<a href="{{ post.data.permalink }}">
								<button class="btn-dark">
									zum Blogpost
								</button>
							</a>


						<div class="box__pixel">
							<img src="/assets/images/pixel-box-infos.svg" widht="50" height="50">
						</div>
					</p>

					{% if post.data.datum and post.data.author %}
						<p>
							<i>{{ post.data.datum }}</i>  ({{ post.data.author }})</p>
					{% elif post.data.datum %}
						<p><i>{{ post.data.datum }}</i>
							{{ post.data.author }}</p>
					{% elif post.data.author %}
						<p>({{ post.data.author }})</p>
					{% endif %}

				</div>
			{% endif %}

		{% endif %}
	{% endfor %}
</div>

